{
"compilerOptions": {
    "target": "ES2020",
    "module": "nodenext",
    "moduleResolution": "nodenext",

    "outDir": "./dist",
    "rootDir": "./src",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node"],
    "allowSyntheticDefaultImports": true,
    "verbatimModuleSyntax": true
  },

  "include": [
    "src/**/*",
    "gtfsrt-lille.d.ts",
  ],
  "exclude": [
    "node_modules",            // Exclude node_modules
  ]
}